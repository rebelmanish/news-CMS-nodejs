        <table class="content-table">
          <thead>
            <th>S.No.</th>
            <th>Full Name</th>
            <th>User Name</th>
            <th>Role</th>
            <th>Edit</th>
            <th>Delete</th>
          </thead>
          <tbody>
            <% users.forEach(function(user, index) { %>
              <tr>
                <td class='id'>
                  <%= index + 1 %>
                </td>
                <td>
                  <%= user.fullname %>
                </td>
                <td>
                  <%= user.username %>
                </td>
                <td>
                  <%= user.role %>
                </td>
                <td class='edit'><a href='/admin/updateUser/<%= user._id %>'><i class='fa fa-edit'></i></a></td>
                <td class="delete">
                  <button onclick="deleteUser('<%= user._id %>')" class="btn-delete btn btn-danger btn-sm">
